<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/backgroundSecond">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:id="@+id/orderTimeToOrDistanceTo"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="@color/text_color"
        android:textSize="25sp"
        tools:text="780 m / 2 min"

        android:layout_marginVertical="@dimen/normal_margin"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:src="@color/white"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginVertical="@dimen/normal_margin"
        android:layout_gravity="center_horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"

            android:orientation="vertical"
            android:layout_marginHorizontal="@dimen/normal_margin">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:textColor="@color/text_color"
                android:text="Сумма заказа:" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:id="@+id/orderPrice"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textColor="@color/text_color"
                android:textSize="18sp"
                tools:text="1 042 руб." />
        </LinearLayout>

        <ImageView
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:src="@color/white"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"

            android:orientation="vertical"
            android:layout_marginHorizontal="@dimen/normal_margin">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:textColor="@color/text_color"
                android:text="Протяжимость заказа:" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:id="@+id/orderDistance"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textColor="@color/text_color"
                android:textSize="18sp"
                tools:text="3,4 km" />
        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:src="@color/white"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="vertical"
        android:layout_margin="@dimen/normal_margin">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:textColor="@color/text_color"
            android:text="Откуда:" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:id="@+id/orderFrom"
            android:textStyle="bold"
            android:textColor="@color/text_color"
            android:textSize="18sp"
            tools:text="Профсоюзная ул., д 134, корп. 3, под. 4" />
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:src="@color/white"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:id="@+id/orderCommit"
        android:textSize="18sp"
        android:textColor="@color/text_color"
        android:layout_margin="@dimen/small_margin"/>

</LinearLayout>