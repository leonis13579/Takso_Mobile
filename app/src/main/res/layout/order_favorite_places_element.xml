<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:id="@+id/ordersFavoritePlacesElement"
    android:layout_marginVertical="7.5dp"
    android:padding="@dimen/normal_padding"
    android:background="@color/backgroundSecond">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:id="@+id/ordersFavoritePlacesName"
        android:text="@string/FavouritePlaces"
        android:textColor="@color/text_color"
        android:textSize="20sp"

        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:id="@+id/personFavouriteNext"
        android:src="@drawable/forward_arrow"

        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"/>
</RelativeLayout>